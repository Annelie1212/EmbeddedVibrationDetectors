<Window x:Class="VibrationDetectors.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VibrationDetectors"
        Background="Black"
        
        mc:Ignorable="d"
        Title="VibrationDetectors" Height="700" Width="400">
        

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
               Foreground="SlateGray"  
               FontSize="72"
               Style="{StaticResource fan-icon}" 
               RenderTransformOrigin="0.5,0.5"
               >
            <TextBlock.RenderTransform>
                <RotateTransform x:Name="Rotation" Angle="0">

                </RotateTransform>
            </TextBlock.RenderTransform>
        </TextBlock>
        
        <StackPanel Grid.Row="1">
            <!--<Slider x:Name="Slider_Speed" IsSnapToTickEnabled="True" TickFrequency="0.1" Value="2" Minimum="0.1" Maximum="4"
             Margin="30 30"-->
             

            <Slider x:Name="Slider_Speed" IsSnapToTickEnabled="True" TickFrequency="0.5" Value="2" Minimum="0.5" Maximum="4"
             Margin="30 30"
             ValueChanged="Slider_Speed_ValueChanged"
             />
            <Grid>
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" x:Name="Btn_Trigged" Style="{StaticResource btn-secondary}" Content="" Click="Btn_TriggedState_Click" />
                <!--#endregion-->
                    <Button Grid.Column="1" x:Name="Btn_OnOff" Style="{StaticResource btn-primary}" Content="START" Click="Btn_Armed_Click" />
            <!--<Button x:Name="Btn_OnOff" Style="{StaticResource btn-primary}" Content="START" />-->
            <!--Bra för skrollning-->
            </Grid> 

            <ListBox x:Name="LB_EventLog" Style="{StaticResource lb-primary}" Height="100" Margin="0 10 0 0" />
        </StackPanel>



    </Grid>

</Window>
